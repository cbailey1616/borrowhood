{
  "expo": {
    "name": "Borrowhood",
    "slug": "borrowhood",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1F12"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.borrowhood.app",
      "buildNumber": "51",
      "infoPlist": {
        "NSCameraUsageDescription": "Borrowhood needs camera access to take photos of items you want to share with your neighbors.",
        "NSPhotoLibraryUsageDescription": "Borrowhood needs photo library access to select photos of items you want to share.",
        "NSLocationWhenInUseUsageDescription": "Borrowhood uses your location to find items and neighbors near you.",
        "NSContactsUsageDescription": "Borrowhood uses your contacts to help you find friends who are already on the app.",
        "NSUserTrackingUsageDescription": "This helps us improve your experience and show relevant items in your neighborhood.",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "CFBundleAllowMixedLocalizations": true,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsLocalNetworking": true
        }
      },
      "associatedDomains": [
        "applinks:borrowhood.com"
      ],
      "usesAppleSignIn": true,
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#4A7C59"
      },
      "package": "com.borrowhood.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./src/assets/notification-icon.png",
          "color": "#4A7C59"
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.borrowhood.app",
          "enableGooglePay": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Borrowhood to access your photos to share items with your neighbors.",
          "cameraPermission": "Allow Borrowhood to access your camera to take photos of items you want to share."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Borrowhood uses your location to show items and neighbors near you."
        }
      ],
      "expo-secure-store",
      [
        "expo-contacts",
        {
          "contactsPermission": "Borrowhood uses your contacts to help you find friends who are already on the app."
        }
      ],
      "expo-apple-authentication",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.676290787470-472asl7h2othaifi7p9pj8bfs7ojo234"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7ac93977-f96c-4e47-a9c5-c1802b9ae3d5"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "owner": "cbailey1616"
  }
}
