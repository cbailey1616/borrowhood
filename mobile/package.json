{
  "name": "borrowhood",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test:ui:seed": "node .maestro/scripts/seed-maestro-data.js",
    "test:ui:cleanup": "node .maestro/scripts/cleanup-maestro-data.js",
    "test:ui": "sh .maestro/scripts/seed-and-run.sh",
    "test:ui:ios": "maestro test .maestro/flows/ --platform ios",
    "test:ui:screenshots": "maestro test .maestro/flows/ --format junit --output .maestro/screenshots/",
    "test:smoke": "jest --testPathPattern=smoke --runInBand",
    "test:components": "jest --testPathPattern=unit/components --runInBand",
    "test:contexts": "jest --testPathPattern=unit/contexts --runInBand",
    "test:hooks": "jest --testPathPattern=unit/hooks --runInBand",
    "test:screens:auth": "jest --testPathPattern=screens/auth --runInBand",
    "test:screens:onboarding": "jest --testPathPattern=screens/onboarding --runInBand",
    "test:screens:main": "jest --testPathPattern='screens/(Feed|Saved|MyItems|Inbox|Profile)Screen' --runInBand",
    "test:screens:listings": "jest --testPathPattern='screens/(Browse|ListingDetail|CreateListing|EditListing|ListingDiscussion|WantedPosts)' --runInBand",
    "test:screens:transactions": "jest --testPathPattern='screens/(BorrowRequest|CreateRequest|EditRequest|RequestDetail|RentalCheckout|TransactionDetail|DamageClaim)' --runInBand",
    "test:screens:social": "jest --testPathPattern='screens/(Friends|Chat|Conversations|UserProfile|InviteMembers)' --runInBand",
    "test:screens:community": "jest --testPathPattern='screens/(MyCommunity|JoinCommunity|CommunitySetting|CommunityLibrary)' --runInBand",
    "test:screens:account": "jest --testPathPattern='screens/(EditProfile|Subscription|PaymentMethods|AddPaymentMethod|SetupPayout|NotificationSettings)' --runInBand",
    "test:screens:features": "jest --testPathPattern='screens/(Notifications|Activity|Referral|Disputes|DisputeDetail|IdentityVerification)' --runInBand",
    "test:screens:extras": "jest --testPathPattern='screens/(Sustainability|Badges|Bundles|LendingCircles)' --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:unit": "jest --testPathPattern=unit --runInBand",
    "test:screens": "jest --testPathPattern=screens --runInBand",
    "test:full": "jest --runInBand --timeout=30000",
    "test:all": "npm run test:smoke && jest --runInBand --timeout=30000"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@gorhom/bottom-sheet": "^5.2.8",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-native-google-signin/google-signin": "^16.1.1",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "@stripe/stripe-identity-react-native": "^0.4.1",
    "@stripe/stripe-react-native": "^0.57.3",
    "expo": "~54.0.33",
    "expo-apple-authentication": "~8.0.8",
    "expo-blur": "~15.0.8",
    "expo-camera": "~17.0.10",
    "expo-clipboard": "~8.0.8",
    "expo-contacts": "~15.0.11",
    "expo-crypto": "~15.0.8",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.11",
    "expo-haptics": "~15.0.8",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-local-authentication": "~17.0.8",
    "expo-location": "~19.0.8",
    "expo-notifications": "~0.32.16",
    "expo-secure-store": "~15.0.8",
    "expo-sms": "~14.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "~15.0.10",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-confetti-cannon": "^1.5.2",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-get-random-values": "~1.11.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "^0.5.1",
    "semver": "^7.7.4",
    "worklets": "^0.0.1-alpha"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.17",
    "react-test-renderer": "^19.1.0"
  },
  "private": true
}
