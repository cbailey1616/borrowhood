{
  "name": "borrowhood-server",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:db": "node scripts/test-db.js",
    "test:stripe": "vitest run tests/stripe/subscriptions.test.js tests/stripe/identity.test.js tests/stripe/payments.test.js tests/stripe/rentals.test.js tests/stripe/gating.test.js tests/stripe/webhooks.test.js tests/stripe/connect.test.js tests/stripe/security.test.js --reporter=verbose",
    "test:stripe:e2e": "vitest run tests/stripe/e2e.test.js --reporter=verbose",
    "test:all": "npm run test:stripe && npm run test:stripe:e2e",
    "test:auth": "vitest run tests/auth.test.js --reporter=verbose",
    "test:listings": "vitest run tests/listings.test.js --reporter=verbose",
    "test:messages": "vitest run tests/messages.test.js --reporter=verbose",
    "test:notifications": "vitest run tests/notifications.test.js --reporter=verbose",
    "test:communities": "vitest run tests/communities.test.js --reporter=verbose",
    "test:friends": "vitest run tests/friends.test.js --reporter=verbose",
    "test:disputes": "vitest run tests/disputes.test.js --reporter=verbose",
    "test:payment-methods": "vitest run tests/payment-methods.test.js --reporter=verbose",
    "test:discussions": "vitest run tests/discussions.test.js --reporter=verbose",
    "test:referrals": "vitest run tests/referrals.test.js --reporter=verbose",
    "test:feed": "vitest run tests/feed.test.js --reporter=verbose",
    "test:saved": "vitest run tests/saved.test.js --reporter=verbose",
    "test:core": "vitest run tests/auth.test.js tests/listings.test.js tests/messages.test.js tests/communities.test.js tests/friends.test.js tests/notifications.test.js --reporter=verbose",
    "test:suite": "vitest run --reporter=verbose",
    "stripe:listen": "stripe listen --forward-to localhost:3000/webhooks/stripe",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "db:start": "pg_ctl -D .pg-data -l .pg-data/logfile start",
    "db:stop": "pg_ctl -D .pg-data stop",
    "db:status": "pg_ctl -D .pg-data status",
    "migrate": "psql borrowhood < migrations/001_initial_schema.sql",
    "migrate:all": "psql borrowhood < migrations/001_initial_schema.sql && psql borrowhood < migrations/002_neighborhoods.sql && psql borrowhood < migrations/003_messaging_and_rto.sql",
    "demo:update": "node scripts/update-demo-password.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/s3-request-presigner": "^3.540.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.2",
    "pg": "^8.12.0",
    "stripe": "^14.14.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "pg-embedded": "^0.2.3",
    "supertest": "^6.3.4",
    "vitest": "^1.3.0"
  }
}
