# Borrowhood Server Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Server
# ============================================
NODE_ENV=development
PORT=3000

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006

# App URL (for callbacks, links, etc.)
APP_URL=http://localhost:3000

# ============================================
# Database
# ============================================
DATABASE_URL=postgres://borrowhood:borrowhood_dev@localhost:5432/borrowhood

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Stripe
# ============================================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Webhook secret from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================
# AWS S3
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=borrowhood-uploads

# ============================================
# Push Notifications (Expo)
# ============================================
# EXPO_ACCESS_TOKEN=your-expo-access-token

# ============================================
# Email (optional)
# ============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# FROM_EMAIL=noreply@borrowhood.com

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
